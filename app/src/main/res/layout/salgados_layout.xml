                android:layout_margin="@dimen/productMargin"
                android:contentDescription="@string/blank"
                android:id="@+id/img_esfiha_folhada_de_queijo"
                android:src="@drawable/esfiha_folhada_de_queijo"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="start"
                android:layout_margin="@dimen/productMargin"
                android:contentDescription="@string/blank"
                android:id="@+id/img_kibe_frito_com_nozes"
                android:src="@drawable/kibe_frito"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="@dimen/productMargin"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/txt_esfiha_fechada_recheada_de_batata"
                android:text="@string/esfiha_fechada_recheada_de_batata" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="@dimen/productMargin"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/txt_esfiha_folhada_de_queijo"
                android:text="@string/esfiha_folhada_de_queijo" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="@dimen/productMargin"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/txt_kibe_frito_com_nozes"
                android:text="@string/kibe_frito_com_nozes" />
        </TableRow>
        <TableRow>  <!-- Row 4 -->
            <ImageView
