                android:layout_gravity="start"
                android:layout_margin="@dimen/productMargin"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/txt_kibe_frito"
                android:text="@string/kibe_frito" />
        </TableRow>
    </TableLayout>
</ScrollView>